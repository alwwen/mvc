{% extends "base.html.twig" %}

{% block title %}Single book Page{% endblock %}

{% block body %}
    <h1>Single book Page</h1>
    <h3>Info om {{book.getTitle|e}}.</h3>
    <p>Titel: {{book.getTitle|e}}</p>
    <p>FÃ¶rfattare: {{book.getAuthor|e}}</p>
    <p>ISBN: {{book.getIsbn|e}}</p>
