{% extends "base.html.twig" %}

{% block title %}Edit Book{% endblock %}

{% block body %}
    <h1>Edit Book</h1>

    <form action="{{ path('book_edit', {'id': book.getId}) }}" method="post">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{ book.getTitle|e }}">
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" value="{{ book.getAuthor|e }}">
        </div>
        <div>
            <label for="isbn">ISBN:</label>
            <input type="text" id="isbn" name="isbn" value="{{ book.getIsbn|e }}">
        </div>
        <button type="submit">Save Changes</button>
    </form>
{% endblock %}